
default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  user: postgres
  password: postgres
  host: localhost
  
development:
  <<: *default
  database: pedido_rapido_development

test:
  <<: *default
  database: pedido_rapido_test

production:
  <<: *default
  database: pedido_rapido_production
  username: pedido_rapido
  password: <%= ENV['PEDIDO_RAPIDO_DATABASE_PASSWORD'] %>
