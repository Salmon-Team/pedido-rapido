<div class="container-fluid">
  <% if notice.present? %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-decoration-none">
      <%= @orders.model_name.human(count: @orders.count) %>
    </h1>
    <button class="btn btn-danger">
        <%= link_to t("actions.order.new"), new_order_path, class:"text-decoration-none text-white" %>
    </button>
  </div>

  <div id="orders">
    <%= render @orders %>
  </div>
</div>
