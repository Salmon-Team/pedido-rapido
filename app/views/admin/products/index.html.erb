<div>
  <% if notice.present? %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div>
    <h1><%= @products.model_name.human(count: @products.count) %></h1>
    <%= link_to t("actions.product.new"), new_product_path %>
  </div>

  <div id="products">
    <%= render @products %>
  </div>
</div>
