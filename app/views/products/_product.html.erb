<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Product.human_attribute_name(:name) %></strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Product.human_attribute_name(:description) %></strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Product.human_attribute_name(:category_id) %></strong>
    <%= product.category_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Product.human_attribute_name(:price) %></strong>
    <%= product.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Product.human_attribute_name(:preparation_time) %></strong>
    <%= product.preparation_time %>
  </p>

  <% if action_name != "show" %>
    <%= link_to t("actions.product.show"), product, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to t("actions.product.edit"), edit_product_path(product), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
